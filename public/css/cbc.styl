@require 'clrs.styl'
html
body
  width: 100%
  padding: 0
  margin: 0

body
  font-family: Oswald

h1
  text-align: center
  font-size: 4rem

#main-menu
  .sessions
    width: 100%
    display: flex
    flex-wrap: wrap
    box-sizing: border-box
    justify-content: center
    padding: 5% 0
    .session
      width: 45%
      box-sizing: border-box
      color: black
      padding: 4rem
      text-align: center
      display: block
      text-decoration: none

      h2
        font-size: 3.5rem
        margin: 0
      .sub
        font-size: 1.5rem
        font-style: italic

  .beer-lists
    display: flex
    box-sizing:border-box
    flex-wrap: wrap
    flex-direction: vertical
    justify-content: center
    padding: 5% 0

    .all-beers-sel
      width: 90%
      background-color: orange
      margin-bottom: 1.5rem

      font-size: 2.5rem
      padding: 1rem 4rem
      box-sizing: border-box
      color: black
      text-decoration: none
      &:after
        content: '➜'
        float: right

html
  font-size: 9px

  @media (min-width: 2160px) and (max-width: 2700px)
    font-size: 0.3vw

  @media (min-width: 1800px) and (max-width: 2160px)
    font-size: 0.4vw

  @media (min-width: 1440px) and (max-width: 1800px)
    font-size: 0.5vw

  @media (min-width: 1080px) and (max-width: 1350px)
    font-size: 0.666667vw
  
  @media (min-width: 720px) and (max-width: 900px)
    font-size: 1vw

  @media (max-width: 500px)
    font-size: 2vw

#beerlist
  width: 100%
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column

  h1 
   margin: 0
   padding: 0.5rem 0
   width: 100%
   text-transform: capitalize
   font-size: 4rem

   sub
     font-size: 1.5rem
     display: block

  .container
    display: flex
    width: 100%
    flex-direction: column
    align-items: center
    flex-wrap: wrap

    @media (min-width: 720px)
      flex-direction: row
      justify-content: space-between
      box-sizing: border-box
      align-items: flex-start
      padding: 0 3vw
      & > div
        max-width: 45.5vw

    @media (min-width: 1080px)
      padding: 0 2.5vw
      & > div
        max-width: 30vw
      & > div.key
      & > div.order
        max-width: 45vw

    @media (min-width: 1440px)
      padding: 0 2vw
      & > div
        max-width: 22.5vw

    @media (min-width: 1800px)
      padding: 0 1.666667vw
      & > div
        max-width: 18.0vw
      & > div.key
      & > div.order
        width: 49vw

    @media (min-width: 2160px)
      padding: 0 1.428571vw
      & > div
        max-width: 15.0vw


  .key
    text-align: center
    margin-top: 1rem
  .key .style-border
    display: inline-block
    padding: 1rem
    font-size: 1.25rem
    margin-right: 1rem
    margin-bottom: 0.5rem
    background: #CCC
    color: inherit

  .order
    padding: 1rem 5%
    width: 100%
    box-sizing: border-box
    display: flex
    justify-content: center
    a
      display: block
      width: 16%
      padding: 0.5rem
      text-align: center
      font-size: 1.5rem
      &:before
        content: '⇳ '

      &:last-child
        content: ''


  .brewery
    width: 90%
    background-color: #EEE
    box-sizing: border-box
    margin-top: 1rem

    h2
      font-size: 2.5rem
      margin: 0
      padding: 1.5rem 2.5rem
      background-color: #333
      color: white

  .beer
    margin-bottom: 0.5rem
    &:last-child
      margin-bottom: 0



    .headline
      padding: 1rem 2.5rem

      font-size: 2rem
      background-color: #CCC
      display: flex
      align-items: center
      flex-wrap: wrap

      .name
        font-weight: bold
        width: 55%

      .abv
        width: 15%
        font-size: 1.75rem

      .style
        width: 30%
        font-size: 1.5rem

      .ratings
        width: 100%
        display: flex
        margin-top: 0.5rem
        font-size: 1.5rem

        .score
          width: 20%
          text-align: center
          box-sizing: border-box
          padding: 0.5rem

          &[href=""]
            text-decoration: none

          &:empty:after
            content: '—'


      .expanded
        width: 100%
        display: flex
        flex-direction: column
        margin-top: 0.5rem

        div.style
          font-size: 1.4rem
          margin-bottom: 0.25rem

        div
          width: 100%
          font-size: 1.25rem
          box-sizing: border-box

.style-border
  &.Dark
    border-left: 1rem solid maroon

  &.Classic
    border-left: 1rem solid silver

  &.Hoppy
    border-left: 1rem solid green

  &.Extreme
    border-left: 1rem solid black

  &.Brett-fermented
    border-left: 1rem solid blue

  &.Sour
    border-left: 1rem solid navy

  &.Belgian
    border-left: 1rem solid fuchsia

  &.Experimental
    border-left: 1rem solid red

  &.Cider
  &.Mead
    border-left: 1rem solid teal

  &.Pumpkin
    border-left: 1rem solid orange

.site-bg-style
  &.avg
    background-color: orange
  &.hype
    background-color:pink
    color: white

  &.untappd
    background-color: #ffcc00
    color: black

  &.ratebeer
    background-color: #2b93cd
    color: #fbd500

  &.beeradvocate
    background-color: black
    color: #e4aa00


.session.yellow
  background-color: yellow
.session.blue
  background-color: blue
.session.red
  background-color: red
.session.green
  background-color: green

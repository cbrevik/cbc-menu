@require 'clrs.styl'
html
body
  width: 100%
  padding: 0
  margin: 0

body
  font-family: Oswald

h1
  text-align: center

#main-menu
  .sessions
    width: 100%
    display: flex
    flex-wrap: wrap
    box-sizing: border-box
    justify-content: center
    padding: 5% 0
    .session
      width: 45%
      box-sizing: border-box
      color: black
      padding: 8vw
      text-align: center
      display: block
      text-decoration: none

      h2
        font-size: 7vw
        margin: 0
      .sub
        font-size: 2vm
        font-style: italic

  .beer-lists
    display: flex
    box-sizing:border-box
    flex-wrap: wrap
    flex-direction: vertical
    justify-content: center
    padding: 5% 0

    .all-beers-sel
      width: 90%
      background-color: orange
      margin-bottom: 3vw

      font-size: 5vw
      padding: 2vw 8vw
      box-sizing: border-box
      color: black
      text-decoration: none
      &:after
        content: 'âžœ'
        float: right

.session.yellow
  background-color: yellow
.session.blue
  background-color: blue
.session.red
  background-color: red
.session.green
  background-color: green

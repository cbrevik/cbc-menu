@require 'clrs.styl'

@font-face {
  font-family: 'oswald';
  font-style: normal;
  font-weight: 400;
  src: local('Oswald Regular'), local('Oswald-Regular'),
       url('/fonts/oswald-v10-latin-regular.woff2') format('woff2'), 
       url('/fonts/oswald-v10-latin-regular.woff') format('woff'); 
}
@font-face {
  font-family: 'oswald';
  font-style: normal;
  font-weight: 700;
  src: local('Oswald Bold'), local('Oswald-Bold'),
       url('/fonts/oswald-v10-latin-700.woff2') format('woff2'), 
       url('/fonts/oswald-v10-latin-700.woff') format('woff'); 
}

html
body
  width: 100%
  padding: 0
  margin: 0

body
  font-family: oswald

h1
  text-align: center
  font-size: 4rem

#exportfield
  width: 100%
  margin-top: 5rem
  padding-bottom: 2rem
  font-size: 2rem
  text-align: center

  input
    display: block
    border: 0.5rem dashed yellow
    width: 80%
    margin: 1rem auto
    padding: 1rem
    text-align: center
    font-family: inherit

#main-menu
  .msg
    width: 80%
    margin: 4vw auto 0
    padding: 3vw 5vw
    font-weight: bold
    font-size: 3vw
    border: 1vw dashed yellow
    text-align: center
    
  .sessions
    width: 100%
    display: flex
    flex-wrap: wrap
    box-sizing: border-box
    justify-content: center
    padding: 5% 0
    .session
      width: 45%
      box-sizing: border-box
      color: black
      padding: 4rem
      text-align: center
      display: block
      text-decoration: none

      h2
        font-size: 3.5rem
        margin: 0
      .sub
        font-size: 1.5rem
        font-style: italic


  .info
    text-align: center
    font-size: 2rem

  .beer-lists
    display: flex
    box-sizing:border-box
    flex-wrap: wrap
    flex-direction: vertical
    justify-content: center
    padding: 5% 0

    .all-beers-sel
      width: 90%
      background-color: orange
      margin-bottom: 1.5rem

      font-size: 2.5rem
      padding: 1rem 4rem
      box-sizing: border-box
      color: black
      text-decoration: none
      &:after
        content: '➜'
        float: right

html
  font-size: 9px

  @media (min-width: 2160px) and (max-width: 2700px)
    font-size: 0.3vw

  @media (min-width: 1800px) and (max-width: 2160px)
    font-size: 0.4vw

  @media (min-width: 1440px) and (max-width: 1800px)
    font-size: 0.5vw

  @media (min-width: 1080px) and (max-width: 1350px)
    font-size: 0.666667vw
  
  @media (min-width: 720px) and (max-width: 900px)
    font-size: 1vw

  @media (max-width: 500px)
    font-size: 2vw

#beerlist
  width: 100%
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column

  h1 
    margin: 0
    padding: 0.5rem 0
    width: 100%
    text-transform: capitalize
    font-size: 4rem
    position: relative
    overflow: hidden

    .back
      height: 150%
      width: 20%
      left: 0
      top: -25%
      text-decoration: none
      font-size: 8rem
      position: absolute
      color:black
      display: block
      &:hover
        background-color: rgba(white, 25%)

   sub
     font-size: 1.5rem
     display: block

  .container
    display: flex
    width: 100%
    flex-direction: column
    align-items: center
    flex-wrap: wrap

    @media (min-width: 720px)
      flex-direction: row
      justify-content: space-between
      box-sizing: border-box
      align-items: flex-start
      padding: 0 3vw
      & > div
        max-width: 45.5vw
      & > div.bar
        max-width: 100vw


    @media (min-width: 1080px)
      padding: 0 2.5vw
      & > div
        max-width: 30vw

    @media (min-width: 1440px)
      padding: 0 2vw
      & > div
        max-width: 22.5vw

    @media (min-width: 1800px)
      padding: 0 1.666667vw
      & > div
        max-width: 18.0vw

    @media (min-width: 2160px)
      padding: 0 1.428571vw
      & > div
        max-width: 15.0vw


  .key
    text-align: center
    margin-top: 1rem
    width: 100%
  .key .style-border
    display: inline-block
    padding: 1rem
    font-size: 1.25rem
    margin-right: 1rem
    margin-bottom: 0.5rem
    background: #CCC
    color: inherit

  &.ms-Dark .key .Dark
  &.ms-Classic .key .Classic
  &.ms-Hoppy .key .Hoppy
  &.ms-Extreme .key .Extreme
  &.ms-Mixed-fermentation .key .Mixed-fermentation
  &.ms-Sour .key .Sour
  &.ms-Belgian .key .Belgian
  &.ms-Experimental .key .Experimental
  &.ms-Cider .key .Cider
  &.ms-Mead .key .Mead
  &.ms-Wine .key .Wine
  &.ms-Sake .key .Sake
  &.ms-Pumpkin .key .Pumpkin
  &.order-score .order .avg
  &.order-hype .order .hype
  &.order-untappd .order .untappd
  &.order-ratebeer .order .ratebeer
  &.order-beeradvocate .order .beeradvocate
  &.saved .filter .saved
  &.not-saved .filter .not-saved
  &.tasted .filter .tasted
  &.not-tasted .filter .not-tasted
    outline: 0.5rem solid fuchsia

  .order
    padding: 1rem 5%
    width: 100%
    box-sizing: border-box
    display: flex
    justify-content: center
    a
      display: block
      width: 16%
      max-width: 60px
      padding: 0.5rem
      text-align: center
      font-size: 1.5rem
      &:before
        content: '⇳ '

      &:last-child
        content: ''


  .filter
    width: 100%
    padding: 1rem 5%
    box-sizing: border-box
    text-align: center

    a
      display: inline-block
      background-color: silver
      padding: 0.5rem
      color: inherit
      width: 10%
      margin: 0 0.5rem
      font-size: 1.5rem
      max-width: 60px
    

  .brewery
    width: 90%
    background-color: #EEE
    box-sizing: border-box
    margin-top: 1rem

    h2
      font-size: 2.5rem
      margin: 0
      padding: 1.5rem 2.5rem
      background-color: #333
      color: white

  &.mini-true
    .beer .headline
      .ratings
      .expanded
        display: none
    

  .beer
    margin-bottom: 0.5rem
    &:last-child
      margin-bottom: 0

    &.saved
      outline: 0.5rem solid fuchsia

    &.tasted
      opacity: 0.4

    .star
    .tick
      text-shadow: 1px 1px 0px black
      color: lighten(silver, 50%)
      margin-top: -0.3em
      padding: 0.1em
      display: inline-block
      cursor: pointer
      font-size: 1.5em
    &.saved .star
    &.tasted .tick
      color: yellow
      text-shadow: 0px 0px 5px black


    .headline
      padding: 1rem 2.5rem

      font-size: 2rem
      background-color: #CCC
      display: flex
      align-items: center
      flex-wrap: wrap

      .name
        font-weight: bold
        width: 42.5%

      .abv
        width: 12%
        font-size: 1.75rem
        &:after
          content:'%'
          font-size: 0.6em
          display: inline-block
          position: relative
          top: -0.6em

      .style
        width: 26.5%
        font-size: 1.5rem

      .marks
        width: 19%

      .ratings
        width: 100%
        display: flex
        margin-top: 0.5rem
        font-size: 1.5rem

        .score
          width: 20%
          text-align: center
          box-sizing: border-box
          padding: 0.5rem

          &[href=""]
            text-decoration: none

          &:empty:after
            content: '—'


      .expanded
        width: 100%
        display: flex
        flex-direction: column
        margin-top: 0.5rem

        div.style
          font-size: 1.4rem
          margin-bottom: 0.25rem

        div
          width: 100%
          font-size: 1.25rem
          box-sizing: border-box

  &.beer-list
    .beer .name:before
      display: inline-block
      height: 2rem
      width: 2rem
      border-radius: 1rem
      content: ''
      vertical-align: middle
      box-shadow: 0px 0px 0px 1px #333
      margin-right: 0.8rem
    .beer.yellow .name:before
      background-color: yellow
    .beer.blue .name:before
      background-color: blue
    .beer.red .name:before
      background-color: red
    .beer.green .name:before
      background-color: green


.style-border
  &.Dark
    border-left: 1rem solid maroon

  &.Classic
    border-left: 1rem solid silver

  &.Hoppy
    border-left: 1rem solid green

  &.Extreme
    border-left: 1rem solid black
  &.Wine
    border-left: 1rem solid maroon
  &.Sake
    border-left: 1rem solid olive

  &.Mixed-fermentation
    border-left: 1rem solid blue

  &.Sour
    border-left: 1rem solid navy

  &.Belgian
    border-left: 1rem solid fuchsia

  &.Experimental
    border-left: 1rem solid red

  &.Cider
    border-left: 1rem solid orange
  &.Mead
    border-left: 1rem solid teal

  &.Pumpkin
    border-left: 1rem solid orange

.site-bg-style
  &.avg
    background-color: orange
  &.hype
    background-color:pink
    color: white

  &.untappd
    background-color: #ffcc00
    color: black

  &.ratebeer
    background-color: #2b93cd
    color: #fbd500

  &.beeradvocate
    background-color: black
    color: #e4aa00


.session.yellow
  background-color: yellow
.session.blue
  background-color: blue
.session.red
  background-color: red
.session.green
  background-color: green

#beerlist.session
  background-color: white
  &.yellow h1
    background-color: yellow
  &.blue h1
    background-color: blue
  &.red h1
    background-color: red
  &.green h1
    background-color: green

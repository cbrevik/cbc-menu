  script(type="text/javascript").
    var initData = {
      beers: !{JSON.stringify(beers)},
      breweries: !{JSON.stringify(breweries)},
      superstyles: !{JSON.stringify(superstyles)},
      metastyles: !{JSON.stringify(metastyles)}
    };
    window.BeerApp = initBeerApp(initData);
    fetch('/latest.json').then(function(res) {
      return res.json();
    }).then(function(latest) {
      window.beers = latest.beers;
      window.breweries = latest.breweries;
      window.superstyles = latest.superstyles;
      window.metastyles = latest.metastyles;
      indexBeers();
      updateBeersMarked();
      route(location.hash);
    });
